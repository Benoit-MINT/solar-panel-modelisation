<div class="container">
  <p>Modifier le projet</p>

  <%= simple_form_for @home do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <% (1..12).each do |month| %>
      <%= f.input "home_consumption_months[]", input_html: { name: "home[home_consumption_months][#{month}]", value: @home.home_consumption_months[month-1] }, label: "Month #{month}" %>
    <% end %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>
