<div class="container">
  <p>hello fron "<%=@home.address%>" show</p>
  <%= link_to "Retour", homes_path, class: 'btn btn-secondary' %>
  <p>Consommation du bien (kW/h) :</p>
  <%= @home.home_consumption_months%>

  <p>ajouter une nouvelle installation solaire</p>
  <%= link_to "Nouvelle installation", new_home_photovoltaic_path(@home), class: 'btn btn-primary' %>

  <h3 class="mt-3">Scénarios d'installation :</h3>
  <%@photovoltaics.each do |photovoltaic|%>
      <strong>Scénario à <%= photovoltaic.power%> kWc :</strong>
      <p>Production mensuelle (kW/h) : <%= photovoltaic.production_months %></p>
      <p>Production autoconsommée (kW/h) : <%=photovoltaic.self_consumption_months%> </p>
      <p>Renvoi sur le réseau (kW/h) : <%=photovoltaic.back_energy_months%> </p>
      <div>
        <%= link_to "Supprimer", home_photovoltaic_path(@home, photovoltaic), class: 'btn btn-secondary', data: {turbo_method: :delete, turbo_confirm: "Voulez vous supprimer cette installation?"} %>
        <%= link_to "Modifier puissance", edit_home_photovoltaic_path(@home, photovoltaic), class: 'btn btn-secondary' %>
      </div>
  <%end%>
</div>
