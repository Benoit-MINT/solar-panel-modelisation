<div class="container">
  <h2>Caract√©ristiques du projet</h2>

  <%= simple_form_for home do |f| %>
    <%= f.input :name %>
    <div data-controller="address-autocomplete">
      <%= f.input :address, input_html: {data: {address_autocomplete_target: "address", action: "keyup->address-autocomplete#search"}} %>
      <ul data-address-autocomplete-target="suggestions">
      </ul>
    </div>
    <div>
      <% (1..12).each do |month| %>
        <%= f.input "home_consumption_months[]", input_html: { name: "home[home_consumption_months][#{month}]", value: @home.home_consumption_months[month-1] }, label: "Month #{month}" %>
      <% end %>
    </div>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>
