<div class="container form my-4 p-4">
  <div class="row text-center">
      <h2>Informations du site</h2>
  </div>

  <%= simple_form_for home do |f| %>
  <div class="row mt-4">
    <div class="col-6">
      <%= f.input :name %>
      <div data-controller="address-autocomplete">
        <%= f.input :address, input_html: {data: {address_autocomplete_target: "address", action: "keyup->address-autocomplete#search"}} %>
        <%# piste pour le front : <%= f.input :rating, collection: ['Good', 'Very Good', 'Excellent'] %>
        <%# voir : https://kitt.lewagon.com/knowledge/cheatsheets/simple_form %>
        <%# voir aussi : https://kitt.lewagon.com/camps/1446/lectures/06-Projects%2F02-i18n %>
        <%# une autre idée : carte en temps réel des points %>
        <ul data-address-autocomplete-target="suggestions">
        </ul>
      </div>
      <div class="d-flex justify-content-around">
        <%= f.input :buy_price_electricity %>
        <%= f.input :sale_price_electricity %>
      </div>
    </div>
    <div class="col-6">
      <p>carto</p>
    </div>
  </div>

  <div class="row mt-5 text-center">
    <h2>Informations de consommation</h2>
  </div>

  <div class="row mt-4 justify-content-center text-center">
    <div class="col-12">
      <div id="cards-consumption">
        <% (1..12).each do |month| %>
          <%= f.input "home_consumption_months[]", input_html: { name: "home[home_consumption_months][#{month}]", value: home.home_consumption_months[month - 1]}, label: "#{Date::MONTHNAMES[month]}" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row mt-4 text-center">
    <strong><i class="fa-solid fa-arrow-up"></i></strong>
    <strong>Ajouter vos données mensuelles</strong>
    <div class="my-4"><strong>OU</strong></div>
    <strong>Importer votre fichier Linky</strong>
    <strong><i class="fa-solid fa-arrow-down"></i></strong>
  </div>

  <div class="row mt-4 justify-content-center text-center">
    <div class="col-4">
      <%= f.input :file, as: :file, label: false%>
      <%= f.submit 'Save', class: 'btn btn-flat my-5' %>
    </div>
  </div>

  <% end %>
</div>
